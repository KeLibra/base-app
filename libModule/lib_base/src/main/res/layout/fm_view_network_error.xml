<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_marginTop="-80dp"
        android:id="@+id/img_error"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x300"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_net_err_page" />

    <TextView
        android:id="@+id/tv_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="您的网络太不给力哦"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/btn_refresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x92"
        android:layout_margin="@dimen/x80"
        android:background="@drawable/bg_round_stroke_ccc_x200"
        android:gravity="center"
        android:text="再试一次"
        android:textColor="#666666"
        android:textSize="16sp" />

</LinearLayout>