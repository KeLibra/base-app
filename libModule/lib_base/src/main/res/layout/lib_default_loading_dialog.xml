<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lib_default_bg_loading"
       >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/LibDialog_animation_loading"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="17dp"
            android:paddingTop="10dp"
            android:paddingRight="17dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="global_load.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/LibDialog_tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LibDialog_animation_loading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="正在加载"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>
