<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fafafa"
    tools:context=".view.activity.MinePageActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_mine_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlv_mine_layout"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_user_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginBottom="@dimen/x60"
            android:background="@drawable/bg_round_f6f6f6_x46"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/color_444444"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>