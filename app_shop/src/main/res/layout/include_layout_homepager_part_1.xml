<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_homepager_top_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x260"
        android:background="@drawable/icon_homepager_top_bg"
        android:paddingTop="@dimen/x40">

        <TextView
            android:id="@+id/tv_homepager_title_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x28"
            android:text="便利分期"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_homepager_title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_homepager_title_big"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@+id/tv_homepager_title_big"
            android:text="甄选好分期 · 精致新生活"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>
