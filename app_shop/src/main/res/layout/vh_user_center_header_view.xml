<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x20"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x320"
        android:background="@drawable/bg_payment_top_banner">

        <ImageView
            android:id="@+id/iv_user_head_img"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x100"
             />

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_user_head_img"
            android:layout_alignBottom="@id/iv_user_head_img"
            android:layout_marginLeft="@dimen/x32"
            android:layout_toRightOf="@+id/iv_user_head_img"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="138****0000" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_user_loan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg_homepager_item"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x48"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/x28"
            android:gravity="center_vertical"
            android:text="分期账单"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x148"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x84"
                    android:text="近7天待还"
                    android:textColor="@color/color_c1c1c1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_user_recent_repay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x84"
                    android:layout_marginTop="@dimen/x4"
                    android:textColor="@color/color_333333"
                    android:textSize="20sp"
                    tools:text="2888" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x80"
                    android:text="全部待还"
                    android:textColor="@color/color_c1c1c1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_user_all_repay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x80"
                    android:layout_marginTop="@dimen/x4"
                    android:textColor="@color/color_333333"
                    android:textSize="20sp"
                    tools:text="86875" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_loan_bill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="@dimen/x30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x80"
                    android:gravity="center_vertical"
                    android:text="账单明细"
                    android:textColor="@color/color_29baf4"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:background="@drawable/icon_user_right_arrow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>